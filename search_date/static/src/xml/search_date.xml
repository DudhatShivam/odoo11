<templates id="search_date_template" xml:space="preserve">
    <t t-name="buttons_for_date">
        <div class="search-range btn-group-sm" >
            <div style="margin-left: 0px; margin-top: 2px; padding-right: 10px;">
                <span style="float: left;">
                    <select class="select_field_date form-control" style="height: 30px;">
                        <option></option>
                        <option t-foreach="search_fields" t-as="field" t-att-value="field[0]">
                            <t t-esc="field[1]"/>
                        </option>
                    </select>
                </span>
                <span style="float: left; margin-left: 2px;">
                    <input style="height: 30px;width: 150px;" class="field_start_date form-control" size="10" placeholder="起始日期" type="text" />
                </span>
                <span style="float: left; margin-left: 2px;">
                    <input style="height: 30px;width: 150px;" class="field_end_date form-control" size="10" placeholder="结束日期" type="text" />
                </span>
            </div>
        </div>
    </t>
</templates>